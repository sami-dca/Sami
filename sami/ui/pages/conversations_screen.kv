<ConversationsScreen>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        TopBar:
            title: "Conversations"

        ScrollView:
            do_scroll_y: True
            effect_cls: 'ScrollEffect'
            bar_width: 0
            MDBoxLayout:
                adaptive_height: True
                orientation: 'vertical'
                md_bg_color: app.theme_cls.primary_color
                spacing: 20

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: app.theme_cls.bg_normal
                    size_hint_y: None
                    adaptive_height: True
                    radius: [20, 20, 0, 0]
                    padding: [0, 0, 0, 40]
                    MDList:
                        id: chat_list
                        spacing: 10
    MDBoxLayout:
        size_hint_y: None
        md_bg_color: 0, 0, 0, 0
        NavBar:
            one: [1, 1, 1, 1]
