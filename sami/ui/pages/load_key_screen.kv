<LoadKeyScreen>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: app.theme_cls.bg_normal
        TopBar:
            title: "Load a key"

        ScrollView:
            do_scroll_y: True
            effect_cls: "ScrollEffect"
            bar_width: 0
            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                md_bg_color: app.theme_cls.primary_color
                spacing: 20

                MDBoxLayout:
                    orientation: "vertical"
                    md_bg_color: app.theme_cls.bg_normal
                    size_hint_y: None
                    adaptive_height: True
                    radius: [20, 20, 0, 0]
                    padding: [0, 0, 0, 40]
                    valign: "center"
                    halign: "center"
                    MDLabel:
                        text: "In order to be able to send and receive messages, please load in a key!"
                        theme_text_color: "Primary"
                    FileChooser:
                        id: file_chooser
                    MDTextButton:
                        text: "Create a new one"
